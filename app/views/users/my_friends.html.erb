<h1>Friends stocks</h1>

<div class='search-area'>
    <h3>Search Friends</h3>
    <%= form_tag search_friend_path, remote: true, method: :get do %>
        <div class="form-group row">
        <div class="col-sm-9 no-right-padding">
            <%= text_field_tag :friend, params[:friend], placeholder: "Name or email", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-3 no-left-padding">
            <%= button_tag type: :submit, class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
            <% end %>
        </div>
        </div>
    <% end %>
</div>






<% if !@friends.empty? %>
    <table class="table table-bordered table-dark table-hover">
    <thead>
        <tr>
        <th scope="col">Email</th>
        <th scope="col"> Frist Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @friends.each do |friend| %>
            <tr>
                <th><%= friend.email%></th>
                <td><%= friend.first_name%></td>
                <td><%= friend.last_name %></td>
                <td><%= link_to 'On follow','#', method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-warning' %></td>
            </tr>
        <% end %>
    </tbody>
    </table>

<% end %>